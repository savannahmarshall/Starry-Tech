<main class="container">
    <h1>Blog Posts</h1>
    <section class="posts-section">
        {{#each posts}}
            <article class="post">
                <h2><a href="/posts/{{id}}">{{title}}</a></h2>
                <p>Posted on: {{createdAt}}</p>
            </article>
        {{else}}
            <p>No blog posts available at this time.</p>
        {{/each}}
    </section>
</main>